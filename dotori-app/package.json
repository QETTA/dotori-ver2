{
  "name": "dotori-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bash scripts/dev/start-dotori-3000.sh",
    "dev:3000": "bash scripts/dev/start-dotori-3000.sh",
    "dev:kill-3000": "bash scripts/dev/kill-legacy-3000.sh",
    "dev:3002": "next dev --turbopack --port 3002",
    "build": "next build",
    "build:ci": "SKIP_ENV_VALIDATION=1 next build",
    "start": "next start",
    "start:3002": "next start --port 3002",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "ci": "npm run format:check && npm run lint && npm run typecheck && npm run test && npm run build:ci",
    "ci:preflight": "npm run lint && npm run typecheck && npm test",
    "deploy:do:local": "bash ../scripts/deploy-do-local-fast.sh",
    "format": "prettier --write src/lib/chat-quota.ts src/app/api/chat/route.ts src/app/api/chat/stream/route.ts src/lib/engine/__tests__/report-engine.test.ts src/__tests__/api/chat.test.ts src/__tests__/e2e/chat.spec.ts src/__tests__/e2e/explore.spec.ts src/__tests__/e2e/home.spec.ts scripts/flaky-engine-tests.mjs README.md package.json",
    "format:check": "prettier --check src/lib/chat-quota.ts src/app/api/chat/route.ts src/app/api/chat/stream/route.ts src/lib/engine/__tests__/report-engine.test.ts src/__tests__/api/chat.test.ts src/__tests__/e2e/chat.spec.ts src/__tests__/e2e/explore.spec.ts src/__tests__/e2e/home.spec.ts scripts/flaky-engine-tests.mjs README.md package.json",
    "screenshot": "npx tsx scripts/screenshot-check.ts",
    "ux:guard": "bash scripts/ux-guard.sh",
    "qa:mobile": "./scripts/mobile-qa.sh",
    "check-console": "npx tsx scripts/check-console.ts",
    "check:ds": "npx tsx scripts/check-design-system.ts",
    "audit:design": "DS_REPORT=1 npx tsx scripts/check-design-system.ts",
    "audit:design:strict": "DS_REPORT=1 DS_SCORE_ENFORCE=1 DS_SCORE_MIN=85 npx tsx scripts/check-design-system.ts",
    "audit:mobile": "npx tsx scripts/check-mobile-integrity.ts",
    "audit:mobile:strict": "MOBILE_SCORE_ENFORCE=1 MOBILE_SCORE_MIN=90 npx tsx scripts/check-mobile-integrity.ts",
    "clean": "rm -rf .next node_modules/.cache",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:engine": "vitest run src/lib/engine/__tests__",
    "test:integration": "vitest run src/__tests__/api",
    "test:engine:coverage": "vitest run src/lib/engine/__tests__ --coverage.enabled --coverage.provider=v8 --coverage.reportsDirectory=coverage/engine --coverage.reporter=text --coverage.reporter=json-summary --coverage.thresholds.lines=60 --coverage.thresholds.functions=70 --coverage.thresholds.statements=60 --coverage.thresholds.branches=45",
    "test:engine:cov": "npm run test:engine:coverage",
    "test:engine:flaky": "node scripts/flaky-engine-tests.mjs",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@auth/mongodb-adapter": "^3.11.1",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "mongodb": "^6.21.0",
    "mongoose": "^8.23.0",
    "motion": "^12.34.2",
    "next": "16.1.6",
    "next-auth": "5.0.0-beta.30",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.5.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
